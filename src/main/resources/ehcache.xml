<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
	<diskStore path="java.io.tmpdir" />
	<!-- 配置默认的缓存区 -->
	<defaultCache
		maxElementsInMemory="10000"
		eternal="false"
		timeToIdleSeconds="120"
		timeToLiveSeconds="120"
		maxElementsOnDisk="10000000"
		diskExpiryThreadIntervalSeconds="120"
		memoryStoreEvictionPolicy="LRU"/>
	<!-- 配置名为public的缓存区 -->
	<cache name="basedata"
		maxElementsInMemory="10000"
		eternal="false"
		overflowToDisk="true"
		timeToIdleSeconds="0"
		timeToLiveSeconds="7200" />
	<cache name="public"
		maxElementsInMemory="10000"
		eternal="false"
		overflowToDisk="true"
		timeToIdleSeconds="0"
		timeToLiveSeconds="7200" />
	<cache name="user"
		maxElementsInMemory="10000"
		eternal="false"
		overflowToDisk="true"
		timeToIdleSeconds="0"
		timeToLiveSeconds="7200" />
	<!--5分钟-->
	<cache name="wxconf"
		maxElementsInMemory="100"
		eternal="false"
		overflowToDisk="true"
		timeToIdleSeconds="0"
		timeToLiveSeconds="360" />
</ehcache>